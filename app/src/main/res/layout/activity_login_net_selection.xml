<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smartwakala_background"
    android:fillViewport="false"
    tools:context=".LoginNetSelectionActivity">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/choose_network"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/tigo_pesa_button"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/tigopesa"
            android:hapticFeedbackEnabled="true" />

        <Button
            android:id="@+id/airtel_money_button"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/airtelmoney"
            android:hapticFeedbackEnabled="true" />

        <Button
            android:id="@+id/halo_pesa_button"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/halopesa"
            android:hapticFeedbackEnabled="true" />

        <Button
            android:id="@+id/m_pesa_button"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mpesa"
            android:hapticFeedbackEnabled="true" />

        <Button
            android:id="@+id/t_pesa_button"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/tpesa"
            android:hapticFeedbackEnabled="true" />

        <Button
            android:id="@+id/ezy_pesa_button"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ezypesa"
            android:hapticFeedbackEnabled="true" />

    </LinearLayout>

</ScrollView>